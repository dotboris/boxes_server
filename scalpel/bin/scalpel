#!/usr/bin/env ruby
$:.unshift File.expand_path('../../lib', __FILE__)
require 'boxes'
require 'scalpel'

puts 'Scalpel reporting in!'

conn = Boxes.bunny
conn.start

ch = conn.create_channel
q = ch.queue 'boxes.uncut'

q.subscribe block: true do |_, _, body|
  begin
    puts 'Read a thing'
    order = Scalpel::Order.from_json body
    puts "order: #{order.inspect}"

    slices = Scalpel.split_image order.image, order.x, order.y

    split_image = Scalpel::SplitImage.create! Boxes.media_root
    split_image.slices = slices
    split_image.original = order.image
    split_image.row_count = x

    split_image.save!
    split_image.activate!
  rescue => e
    puts "Failed to respond to request #{e}"
    puts e.backtrace
  end
end
